---
interface Props {
	title: string;
}

const { title } = Astro.props;
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="I´m Alan Meza a soffware developer specialized in web technologies"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="author" content="Alan Meza" />
		<meta name="keywords" content="Alan Meza Valenzuela, software developer, web technologies" />
		<meta
			property="og:title"
			content="Alan Meza | Software developer specialized in web technologies"
		/>
		<meta
			property="og:description"
			content="I´m Alan Meza a soffware developer specialized in web technologies"
		/>
		<title>{title}</title>
	</head>
	<body class="bg-view p-5 max-w-[1200px] lg:mx-auto flex flex-col gap-52">
		<div>
			<Header />
			<main>
				<slot />
			</main>
		</div>
	</body>
</html>
<style is:global>
	html {
		font-family: 'Inter', sans-serif;
		background: #0c0c0c;
		color-scheme: light dark;
	}
	.gray-text {
		color: #727272;
	}
	.fade-text {
		background: linear-gradient(100deg, rgba(79, 195, 247, 1) 0%, rgba(255, 255, 255, 1) 100%);
		color: transparent;
		-webkit-background-clip: text;
	}
</style>
