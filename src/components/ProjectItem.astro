---
interface Props {
	title: string;
	description: string;
	image: string;
	link: string;
}

const { title, description, image, link } = Astro.props;
---

<article
	class="flex flex-col gap-8 rounded-lg p-4 hover:bg-white hover:bg-opacity-10 transition-colors"
>
	<a href={link} target="_blank" class="flex flex-col gap-4">
		<div class="w-full">
			<img
				src={image}
				alt=`${image} photo`
				class="w-full rounded-lg"
				width="500"
				height="500"
				loading="lazy"
				decoding="async"
			/>
		</div>
		<div class="flex flex-col gap-7 lg:justify-end">
			<div class="flex flex-col gap-2">
				<h3 class="font-bold text-2xl text-white">{title}</h3>
				<p class="text-base font-normal text-neutral-2 leading-7 gray-text text-white">
					{description}
				</p>
			</div>
		</div>
	</a>
</article>
