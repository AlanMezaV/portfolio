---
import { geti18n } from '../i18n';
const { currentLocale } = Astro;
const i18n = geti18n({ currentLocale });
---

<footer class="flex gap:32 justify-between h-[50px] items-center gap-2">
	<p class="lg:text-base text-sm text-white">
		{i18n.FOOTER_DESCRIPTION}
	</p>
	<div class="flex flex-row lg:gap-8 gap-4">
		<a href="https://github.com/AlanMezaV" title="Github" target="_blank">
			<img src="/github.svg" alt="Github logo" class="lg:size-8 size-16 github" />
		</a>
		<a
			href="https://www.linkedin.com/in/alan-meza-valenzuela-83a871226/"
			title="Linkedin"
			target="_blank"
		>
			<img src="/linkedin.svg" alt="Linkedin logo" class="lg:size-8 size-16 linkedin" />
		</a>
	</div>
</footer>

<style>
	.github:hover {
		filter: brightness(70%);
		cursor: pointer;
	}
	.linkedin:hover {
		filter: brightness(70%);
		cursor: pointer;
	}
</style>
